  <div class="row">
        <div class="col s12 m4">
          <div>
          <h3>Welcome, {{name}}!</h3>
         </div>    

         <div class=" center-align">
        <!-- Modal Trigger -->
         <a class="waves-effect waves-light btn modal-trigger " href="#modal1">AddPost</a>

          </div>
       </div>

{{#if posts.length}}
        <div class= " col s12 m8 ">
          <div class=" bookbox ">
           <h3>Current Posts:</h3>

           {{#each posts as |post|}}
         <div class="card">
 
    <div class="card-content">
      <span class="card-title"><h2>{{post.title}}</h2></span>

     <h3>{{description}}</h3>
    </div>
    <div class="card-tabs">
      <ul class="tabs tabs-fixed-width">
        <li class="tab activator"><a href="#{{post.post_id}}-vcoms">View Comments</a></li>
        <li class="tab"><a class="active" href="#{{post.post_id}}-del">Delete</a></li>
        <li class="tab"><a class="active" href="#{{post.post_id}}-upd">Update</a></li>

      </ul>
    </div>
    <div class="card-content grey lighten-4">
      <div class="card-reveal">
      <span class="card-title grey-text text-darken-4">Comments<i class="material-icons right">close</i></span>
      <p>{{comment-details}}</p>
     </div>

      <div id="{{post.post_id}}-del">
            <button data-id="{{post.post_id}}-del" class="submit hoverable waves-effect waves-light btn teal darken-3" type="submit">Delete</button>
      </div>
    </div>
  </div>
          {{/each}}
          </div>


        </div>
  {{/if}}

   </div>
      
   

     
<!-- Modal Structure -->
<div id="modal1" class="modal ">   
 
   <div class="modal-content center-align">
         <div class=" modal-top">
   <h4 id="info-modal-heading center-align">New Post</h4> 
   </div>
      <form class="form new-book-form  center-align">

        <div class="row">
        <div class="form-group input-field  center-align">
          <input class="form-input" type="text" id="post-title" name="post-title" />
          <label for="post-title">Post Title:</label>
        </div>
        </div>

   
        <div class="row">
        <div class="form-group input-field  center-align">        
        <textarea class="form-input addbook" type="text" id="post-desc" name="post-desc"></textarea>
       <label for="post-desc">Description:</label> 
       </div>
         
   
    <div class="modal-footer  center-align">
        <button type="submit" href="#!" class="modal-close waves-effect waves teal darken-4 btn-large add-book">Add Book</button>
    </div>
    </form>
</div>
 </div>



 
  <script src="./js/dashboard.js"></script>
