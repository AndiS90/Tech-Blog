     <style>
        body {
          background-image: url('/images/background-4.png');
        }
      </style>
 
 
  <div class="row">
        <div class="col s12 m4">
          <div>
          <h3>Welcome, {{name}}!</h3>
         </div>    

         <div class=" center-align">
        <!-- Modal Trigger -->
         <a class="waves-effect waves-light btn modal-trigger " href="#modal1">Add Post</a>

          </div>
       </div>

{{#if posts.length}}
        <div class= " col s12 m8 ">
          <div class=" bookbox ">
           <h3>Current Posts:</h3>

           {{#each posts as |post|}}
         <div class="card">
 
    <div class="card-content">

     <button data-type="{{post_id}}" href="#{{post.post_id}}-del" class="del-{{post_id}} submit hoverable waves-effect waves-light btn teal darken-3"  type="delete"><i  class="small material-icons">delete</i></button>
      <a class="waves-effect waves-light modal-trigger " href="#modal0{{post_id}}">
      <button data-type="{{post_id}}" class=" upd-{{post_id}} hoverable waves-effect waves-light btn teal darken-3 " ><i class="small material-icons">comment</i></button>
      </a>
      <span class="card-title"><h2>{{post.title}}</h2></span>

     <h3>{{description}}</h3>
    </div>
      <div class="card-content">
      <span class="card-title activator grey-text text-darken-4">Comments<i class="material-icons right">more_vert</i></span>
   
    </div>
    {{!-- <div class="card-content grey lighten-4"> --}}
      <div class="card-reveal">
      <span class="card-title grey-text text-darken-4">Comments<i class="material-icons right">close</i></span>
         <div id="{{post.post_id}}-vcoms">
      {{#if comments}}
        {{#each comments as |comment|}}
          <div class="row">
            <div class="col s12">
              <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                  <span class="card-title"></span>
                  <p>{{comment.description}}</p>
                </div>
                <div class="card-action">
                  <a href="#">{{user.name}}</a>
                  <a href="#">{{format_date comment.updatedAt}}</a>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      {{/if}}
    </div>
     {{!-- </div> --}}
    </div>
  </div>


<!-- Modal Structure -->
<div id="modal0{{post_id}}" class="modal ">   
 
   <div class="modal-content center-align">
         <div class=" modal-top">
   <h4 id="info-modal-heading center-align">Update Post</h4> 
   </div>
      <form class="form upd-post-form center-align">

        <div class="row">
        <div class="form-group input-field  center-align">
          <input value="{{post.title}}" class="form-input" type="text" id="upd-post-title" name="post-title" />
          <label for="upd-post-title">Post Title:</label>
        </div>
        </div>

   
        <div class="row">
        <div class="form-group input-field  center-align">        
        <input value="{{post.description}}" class="form-input addbook" type="text" id="upd-post-desc" name="post-desc"></input>
       <label for="upd-post-desc">Description:</label> 
       </div>
        </div>
         
   
    <div class="modal-footer  center-align">
        <button type="submit" href="#!" class="modal-close waves-effect waves teal darken-4 btn-large add-book">Update Post</button>
    </div>
    </form>
</div>
 </div>
  {{!-- <script>
    $(document).ready(function () {
        $(`#modal0{{post_id}}`).modal();
    });
</script> --}}


          {{/each}}
          </div>


        </div>
  {{/if}}

   </div>
      
   

     
<!-- Modal Structure -->
<div id="modal1" class="modal ">   
 
   <div class="modal-content center-align">
         <div class=" modal-top">
   <h4 id="info-modal-heading center-align">New Post</h4> 
   </div>
      <form class="form new-post-form center-align">

        <div class="row">
        <div class="form-group input-field  center-align">
          <input class="form-input" type="text" id="post-title" name="post-title"></input>
          <label for="post-title">Post Title:</label>
        </div>
        </div>

   
        <div class="row">
        <div class="form-group input-field  center-align">        
        <textarea class="form-input addbook" type="text" id="post-desc" name="post-desc"></textarea>
       <label for="post-desc">Description:</label> 
       </div>
        </div>
   
    <div class="modal-footer  center-align">
        <button type="submit" href="#!" class="modal-close waves-effect waves teal darken-4 btn-large add-book">Add Post</button>
    </div>
    </form>
</div>
 </div>




 
