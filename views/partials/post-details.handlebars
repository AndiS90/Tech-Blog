<div class="card">

    <div class="card-content">
      <span class="card-title"><h2>{{title}}</h2></span>

      <h3>{{description}}</h3>
    </div>
    <div class="card-tabs">
      <ul class="tabs tabs-fixed-width">
        <li class="tab activator"><a href="#{{post_id}}-vcoms">View Comments</a></li>
        <li class="tab"><a class="active" href="#{{post_id}}-reply">Reply</a></li>
      </ul>
    </div>
    <div class="card-content grey lighten-4">
      <div class="card-reveal">
      <span class="card-title grey-text text-darken-4">Comments<i class="material-icons right">close</i></span>
      {{#each comments as |comment|}}
      <h4>{{comment-details}}</h4>
      {{/each}}
    </div>
      <div id="{{post_id}}-reply">
        <form class="form comment-form" id ="{{post_id}}">
          <div class="input-field">
            <textarea class="materialize-textarea comment" type="text" id="comment"></textarea>
            <label for="comment">Thoughts?</label>
          </div>
          <div class="form-group card-action ">
            <button data-id="{{post_id}}" class="submit hoverable waves-effect waves-light btn teal darken-3" type="submit">login</button>
          </div>
        </form>
    </div>

</div>


