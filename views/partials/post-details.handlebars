<div class="card">

  <div class="card-content">
    <div><span class="left">{{user.name}}</span>
      <span class="right">{{format_date updatedAt}}</span>
    </div>
    <span class="card-title"><h2>{{title}}</h2></span>

    <h3>{{description}}</h3>

  </div>
  <div class="card-tabs">
    <ul class="tabs tabs-fixed-width">
      <li class="tab"><a href="#{{post_id}}-vcoms">View Comments</a></li>
      <li class="tab"><a class="" href="#{{post_id}}-reply">Reply</a></li>
    </ul>
  </div>

  <div class="card-content grey lighten-4">
    {{!  <div class="card-reveal">
      <span class="card-title grey-text text-darken-4">Comments<i class="material-icons right">close</i></span> }}
    <div id="{{post_id}}-vcoms">
      {{#if comments}}
        {{#each comments as |comment|}}
          <div class="row">
            <div class="col s12">
              <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                  <span class="card-title"></span>
                  <p>{{comment.description}}</p>
                </div>
                <div class="card-action">
                  <a href="#">{{user.name}}</a>
                  <a href="#">{{format_date comment.updatedAt}}</a>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      {{/if}}
    </div>
    {{! </div> }}
    <div id="{{post_id}}-reply">
      <form class="form comment-form" id="{{post_id}}">
        <div class="input-field">
          <textarea
            class="materialize-textarea comment"
            type="text"
            id="comment"
          ></textarea>
          <label for="comment">Thoughts?</label>
        </div>
        <div class="form-group card-action">
          <button
            data-id="{{post_id}}"
            class="submit hoverable waves-effect waves-light btn teal darken-3"
            type="submit"
          >Submit Comment</button>
        </div>
      </form>
    </div>

  </div>
</div>

